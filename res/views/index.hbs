<html>
<head>
    <link rel="stylesheet" href="style.css">
</head>
<h1>Notizblock</h1>

<header>{{title}}</header>
{{#if note}}
    {{#each note}}
        <div class="title"><p>Titel: {{title}}</p></div>
        <div class="importance"><p>Wichtigkeit: {{importance}}</p></div>
        <div class="finishedTill"><p>Fertig bis: {{finishedTill}}</p></div>
        <div class="finished"><p>Erledigt: {{#if finished}}
        Ja
        {{else}}
        Nein
        {{/if}}</p></div>
    {{/each}}

{{else}}
    <p>Keine Notizen!</p>
{{/if}}
<form action='/notes' method='get'><input type='submit' value='Neue Notiz'></form>
</html>