<body>
<h1>Neue Notiz</h1>
    <form  id="new_edit_form" action='/' method='post'>

            <div class="new_edit_content">
                <label> Titel </label>
                <input type="text" name='title' placeholder='Titel' required>
            </div>


            <div class="new_edit_content">
                <label>Beschreibung</label>
                <textarea type="text" name='description' placeholder='Beschreibung' required></textarea>
            </div>

            <div class="new_edit_content">
                <label>Wichtigkeit</label>
                <input pattern="[1-5]" name="importance" placeholder="1-5" required>
            </div>


            <div class="new_edit_content">
                <label>Fertig bis</label>
                <input pattern="(((0?[1-9]|1[0-9]|2[0-9]|3[01]).(0?[13578]|1[02]))|((0?[1-9]|1[0-9]|2[0-9]|3[0]).(0?[469]|11))|((0?[1-9]|1[0-9]|2[0-9]).(0?2))).(20((1[6-9])|([2-9][0-9])))" type="date" name='finishedTill' placeholder='dd.mm.yyyy' required>
            </div>

            <div class="new_edit_options">
                <input name='finished' type="checkbox" value="on">
                <label>Erledigt!</label>
            </div>


            <div class="new_edit_options">
                <button class="options" type='submit' value='Speichern'>Speichern</button>
            </div>

    </form>
    <div class="new_edit_options">
        <form action='/' method='get'><button id="new_edit_cancel" type='submit' value='Abbrechen'>Abbrechen</button></form>
    </div>

</body>